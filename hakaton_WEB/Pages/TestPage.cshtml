@page "{testId:int}"
@model hakaton_WEB.Pages.Shared.TestPageModel

<h1>Тест</h1>
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">
        @Model.SuccessMessage
    </div>
}
@if (Model.CurrentQuestion != null)
{
    <div class="question">
        <h3>Вопрос @Model.CurrentQuestion.Id: @Model.CurrentQuestion.Question</h3>
        
        <form method="post">
            <div class="form-check">
                <input type="radio" class="form-check-input" name="selectedAnswer" value="0" id="answer0" required />
                <label class="form-check-label" for="answer0">@Model.CurrentQuestion.Answer0</label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" name="selectedAnswer" value="1" id="answer1" required />
                <label class="form-check-label" for="answer1">@Model.CurrentQuestion.Answer1</label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" name="selectedAnswer" value="2" id="answer2" required />
                <label class="form-check-label" for="answer2">@Model.CurrentQuestion.Answer2</label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" name="selectedAnswer" value="3" id="answer3" required />
                <label class="form-check-label" for="answer3">@Model.CurrentQuestion.Answer3</label>
            </div>

            @if (!Model.IsLastQuestion)
            {
                <button type="submit" class="btn btn-primary">Следующий вопрос</button>
            }
            else
            {
                <a href="/TestsPage" class="btn btn-success">Закончить тестирование</a>
            }

        </form>
    </div>
}

<style>
    .question {
        margin-bottom: 20px;
        padding: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .btn {
        margin-top: 20px;
    }
</style>